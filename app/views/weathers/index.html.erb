<% content_for :javascript do %>
<script>weather_type='<%= @weather_type %>'</script>
<%= javascript_include_tag :weathers %>
<% end %>
<div id="card" class="weather">
  <svg id="inner">
    <defs>
      <path id="leaf" d="M41.9,56.3l0.1-2.5c0,0,4.6-1.2,5.6-2.2c1-1,3.6-13,12-15.6c9.7-3.1,19.9-2,26.1-2.1c2.7,0-10,23.9-20.5,25 c-7.5,0.8-17.2-5.1-17.2-5.1L41.9,56.3z"/>
    </defs>
    <circle id="sun" style="fill: #F7ED47" cx="0" cy="0" r="50"/>
    <g id="layer3"></g>
    <g id="cloud3" class="cloud"></g>
    <g id="layer2"></g>
    <g id="cloud2" class="cloud"></g>
    <g id="layer1"></g>
    <g id="cloud1" class="cloud"></g>
  </svg>
  <div class="details">
    <div class="temp"><%= @result['main']['temp'].round %><span><%= @unit_letter %></span></div>
    <div class="right">
      <div id="date"><%= Date.current %></div>
      <div id="place"><%= "#{@result['name']}, #{@result['sys']['country']}"%></div>
      <div id="summary"></div>
    </div>
  </div>
</div>